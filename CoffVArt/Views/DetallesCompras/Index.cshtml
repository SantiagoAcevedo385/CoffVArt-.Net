@model IEnumerable<CoffVArt.Models.DetallesCompra>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insumo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compra.IdCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Insumo.IdInsumos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetalleCompraId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetalleCompraId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DetalleCompraId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
